def hand_evaluation():
    # ANTECKNING
    # färgstege (färg + stege)


    # fyrtal
    if par_triss_fyrtal(4,valör_list):
        return "fyrtal"


    # kåk (triss + par)
    elif par_triss_fyrtal(2,valör_list) and par_triss_fyrtal(3,valör_list):
        return "kåk"


    # färg (5 av samma färg)
    elif par_triss_fyrtal(5,färg_list):
        return "färg"


    # stege - behöver ta hänsyn till ess (5 kort med valörer i direkt följd)


    # triss
    elif par_triss_fyrtal(3,valör_list):
        return "triss"
    

    # tvåpar


    # par
    elif par_triss_fyrtal(2,valör_list):
        return "par"

    # högt kort
    #return f"high card ({sorted(valör_list)[-1]})"
    return f"high card ({sorted(valör_list)[-1]})"



