#steg 1
fortsätta = 1
x = [1,2,3,4,5]
y = ["addition","subtraktion","multiplikation","division","fakultet"]
y1 = ["+","-","×","÷","!"]


def räkna(operation,tal1,tal2):
    svar = 0
    if operation == 1:
        svar = tal1 + tal2
    elif operation == 2:
        svar = tal1-tal2
    elif operation == 3:
        svar = tal1*tal2
    elif operation == 4:
        svar = tal1/tal2
    print(tal1,y1[val],tal2,"=",svar)
         
def fakultet(n):
    svar_f = 1
    for p in range(1,n+1):
        svar_f = svar_f*p
    print(n,"!","=",svar_f) 



#steg 2
print("")
