#steg 1
fortsätta = 1
x = [1,2,3,4,5]
y = ["addition","subtraktion","multiplikation","division","fakultet"]
y1 = ["+","-","×","÷","!"]


def räkna(räknesätt,tal1,tal2):
    svar = 0
    if räknesätt == 1:
        svar = tal1 + tal2
    elif räknesätt == 2:
        svar = tal1-tal2
    elif räknesätt == 3:
        svar = tal1*tal2
    elif räknesätt == 4:
        svar = tal1/tal2
    print(tal1,y1[val],tal2,"=",svar)
         
def fakultet(n):
    svar_f = 1
    for p in range(1,n+1):
        svar_f = svar_f*p
    print(n,"!","=",svar_f) 



#steg 2
print("\nTryck följande")
for i in range(len(x)):
        print(x[i],"för", y[i])
print("\n")

while fortsätta == 1:
    val = int(input("räknesätt: "))-1
    if val != 4:
        siffra1 = int(input("första talet: "))
        siffra2 = int(input("andra talet: "))
        print("\n")
        räkna(val+1,siffra1,siffra2)
        print("\n")
    elif val == 4:
        siffra3 = int(input("n = "))
        print("\n")
        fakultet(siffra3)
        print("\n")

    print("1 för att välja räknesätt igen")
    print("2 för att avsluta")
    fortsätta = int(input(" "))
    print("\n")
  



