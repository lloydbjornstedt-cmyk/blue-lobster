print("\n")    
print("Iterationer av spelet:",k+1)
print("Omgångar som spelades:",tot_omgång)
print("Omgångar per iteration:",round((tot_omgång/(k+1)),2))
print("Rundor per omgång:",round(tot_rounds/(antal_spelare*tot_omgång),2))
